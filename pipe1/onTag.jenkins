pipeline {
    agent any

    // parameters {
    //     string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
    // }

    environment { 
        Greeting = "Hello"
        GUGUS = "dada" 
    }

    stages {
        stage('Greets') {
            steps {
                echo "$Greeting"
            }
        }
        stage('Hubel') {
            steps {
                echo 'Testing..'
                echo "$GUGUS"
            }
        }
        stage('Fubbel') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Include') {
            load includeOnTag.jenkins
        }
    }
    post {
        always {
            // mail to: root@localhost, subject: 'The Pipeline ran (:', body: 'yours sincerely...'
            echo "Alway POST"
        }
        failure {
            echo "Fail!!! ):"
        }
    }    
}